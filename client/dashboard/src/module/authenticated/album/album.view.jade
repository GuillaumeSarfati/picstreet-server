ion-view(title="{{album.name}}")
		
	ion-content#album

		
		.infos
			input(ng-model="album.name")
		
		ion-scroll(
			direction="x"
			scrollbar-x="false"
		)
			.pictures
				.picture
					form.dropzone#dropzone(
						ng-if="dropzone"
						method="post"
						enctype="multipart/form-data"
						ng-dropzone
						dropzone="dropzone"
						dropzone-config="dropzoneConfig"
						event-handlers="dropzoneEvents"
					)
				.picture(
					ng-repeat="picture in album.pictures track by $index"

				)
					img(
						ng-src="http://localhost:3000/api/Buckets/ppxpicturesresized/download/resized-{{picture.name}}"
					)
					.price(
						ng-class="{'purchase': picture.purchase }"
					) {{ picture.price }}â‚¬
		
			


		.actions
			button(
				ng-click="updateAlbum(album)"
			) Update Album

			button(
				ng-click="updateAlbum(album)"
			) Delete Album

			button(
				ng-if="album.status == 'waiting'"
				ng-click="submitToReview(album)"
			) Submit to Review
			
			.admin(ng-grant="['$administrator']")
				button(
					ng-if="album.status == 'review'"
					ng-click="submitToCustomer(album)"
				) Submit to Customer


