
ion-side-menus#authenticated

	ion-side-menu-content(drag-content="false")
		header
			.header-name Picstreet
			.header-content

				.header-role
					.role(ng-grant="['$master']") master
					.role(ng-grant="['$administrator']") administrator
					.role(ng-grant="['$manager']") manager
					.role(ng-grant="['$photographer']") photographer
				.header-breadcrumb
					.breadcrumb-item
						i.ion-ios-arrow-right

				.header-content-icon.ion-ios-bell-outline
				.header-content-icon.ion-ios-gear-outline
				.header-avatar(uib-dropdown)
					
					img(
						src="img/male.png"
						uib-dropdown-toggle
					)
					.dropdown-menu(uib-dropdown-menu)

						li: a(ng-click="profil()") Your profile
						li: a(ng-click="help()") Help
						li: a(ng-click="logout()") Sign out
						
		main
			menu
				
				ion-item(
					ui-sref="authenticated.documents"
					ng-grant="['$new']"
				)
					.icon: i.custom-icon.custom-icon-business
					.title Présentation

				ion-item(
					ui-sref="authenticated.documents"
					ng-grant="['$new']"
				)
					.icon: i.custom-icon.custom-icon-business
					.title Téléchargez vos documents

				ion-item(
					ui-sref="authenticated.reviews"
					ng-grant="['$administrator']"
				)
					.icon: i.custom-icon.custom-icon-business
					.title Reviews

				ion-item(
					ui-sref="authenticated.map"
					ng-grant="['$administrator', '$manager','$photographer']"
				)
					.icon: i.custom-icon.custom-icon-business
					.title Map

				ion-item(
					ui-sref="authenticated.activities"
				)
					.icon: i.custom-icon.custom-icon-business
					.title Activities
				
				ion-item(
					ui-sref="authenticated.photographers"
					ng-grant="['$administrator', '$manager']"
				)
					.icon: i.custom-icon.custom-icon-business
					.title Photographers

				ion-item(
					ui-sref="authenticated.sponsorship"
					ng-grant="['$administrator', '$photographer']"
				)
					.icon: i.custom-icon.custom-icon-business
					.title Parrainer un photographe

				ion-item(
					ui-sref="authenticated.customers"
					ng-grant="['$administrator']"
				)
					.icon: i.custom-icon.custom-icon-business
					.title Customers

				ion-item(
					ui-sref="authenticated.albums"
					ng-grant="['$administrator', '$manager', '$photographer']"
				)
					.icon: i.custom-icon.custom-icon-business
					.title Albums

				ion-item(
					ui-sref="authenticated.cgu"
					ng-grant="['$administrator', '$manager', '$photographer', '$new']"
				)
					.icon: i.custom-icon.custom-icon-business
					.title CGU

				

				

				
				
			.main-content(
				ui-view="menuContent"
			)

